<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcademicLoginController</servlet-name>
        <servlet-class>controller.academic.AcademicLoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowListStudentRegisterController</servlet-name>
        <servlet-class>controller.academic.ShowListStudentRegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChooseCampusController</servlet-name>
        <servlet-class>controller.student.ChooseCampusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.student.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewStudentRegisterController</servlet-name>
        <servlet-class>controller.academic.ViewStudentRegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptStudentController</servlet-name>
        <servlet-class>controller.academic.AcceptStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RejectStudentController</servlet-name>
        <servlet-class>controller.academic.RejectStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowListStudentAcademicController</servlet-name>
        <servlet-class>controller.academic.ShowListStudentAcademicController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAcademicStudentController</servlet-name>
        <servlet-class>controller.academic.ViewAcademicStudentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcademicLoginController</servlet-name>
        <url-pattern>/AcademicLoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowListStudentRegisterController</servlet-name>
        <url-pattern>/ShowListStudentRegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChooseCampusController</servlet-name>
        <url-pattern>/ChooseCampusController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewStudentRegisterController</servlet-name>
        <url-pattern>/ViewStudentRegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptStudentController</servlet-name>
        <url-pattern>/AcceptStudentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RejectStudentController</servlet-name>
        <url-pattern>/RejectStudentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowListStudentAcademicController</servlet-name>
        <url-pattern>/ShowListStudentAcademicController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAcademicStudentController</servlet-name>
        <url-pattern>/ViewAcademicStudentController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>student/chooseCampus.jsp</welcome-file>
    </welcome-file-list>
</web-app>
